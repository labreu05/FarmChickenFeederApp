<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="Add new Schedule" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Date:"/>

            <EditText
                android:id="@+id/new_schedule_date"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Time:"/>

            <EditText
                android:id="@+id/new_schedule_time"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <android.support.v7.widget.AppCompatCheckBox
            android:layout_gravity="center"
            android:id="@+id/new_schedule_is_recurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="Is Recurrent?"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/add_new_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Add"/>

    </LinearLayout>

</FrameLayout>